<script type="text/javascript" src="../lib/My97DatePicker/jHsDate.js"></script>
<script type="text/javascript" src="../lib/jquery.validation/js/jquery.validate.js"></script>
<script type="text/javascript" src="../lib/jquery.validation/js/validate-methods.js"></script>
<script type="text/javascript">
var menucode=""; 
$(function(){
	//出生日期控件
	$("#user_birthday").jHsDate();
    //获取地址栏后面菜单参数
    var a = window.location.href;
    var s=a.indexOf("?");
    menucode=a.substring(s+1);
    //加载医生
    selectDepartment();
    
    //上传身份证组件
    function upload_img(up_img,show_img){
        $(up_img).change(function() {
            var file = this.files[0];
            var r = new FileReader();
            r.readAsDataURL(file);
            $(r).load(function() {
                $(show_img).attr({src:this.result,class:'no-bor'});
            })
        })
    }
    upload_img("#image","#look_img");
    upload_img("#image2","#look_img2");

});
    //新增会员用户
    function member_add(){
        var result=member_add_check();
        if(result){
            var data=$('#form-member-add').serialize();
            $.ajax({
                url: "../../../user-platform/addMember.action",
                type: "post",
                dataType: 'json',
                data:data,
                success: function (response) {

                    if(response.flag==true) {
                        user_id = response.data.user_id;
                        upload_image(user_id);
                        layer.msg('成功添加!');
                        //页面8秒钟后关闭
                        setTimeout(function () {
                            parent.location.reload(); // 父页面刷新
                            parent.layer.close(index1);
                        }, 1000);
                    }else{
                        layer.msg(response.errmsg);
                    }
                }
            });
            var index1 = parent.layer.getFrameIndex(window.name);
        }
    }
 //选择科室
    function selectDepartment(){
    	$("#department_order_id").change(function(){
    		var dep_id = $(this).val();
    		if(dep_id){
    			$.ajax({
		            url:"../../../constant/getDoctorList.action",
		            type:"get",
		            dataType : 'json',
		            data:{department_order_id : dep_id},
		            success:function(json) {
		            	var doctor_html = "<option value=''>全部</option>";
		                $.each(json.data, function(i,p){
		                    doctor_html += "<option value='"+p.doctor_id+"'>"+p.doctor_name+"</option>";
		                });
		                $('#doctor_id').empty();
		                $('#doctor_id').append(doctor_html);
			         }
	       	 	});
    		}
    	});
    }
//上传图片
function upload_image(user_id){
    var data=new FormData($("#form-member-add")[0]);
    $.ajax({
        type:"post",
        url:"../../../upload/file.action",
        headers:{user_id:user_id,report_type:'500005',user_type:"2"},
        data:data,
        dataType:"json",
        processData:false,
        contentType:false,
        success:function(data){
            files = data;
        }
    }); 
}
//选择证件类型
$(function(){
	$("#t1").click(function(){
		$("#idcard_type").show();
		$("#passport_type").hide();
		$("#passport_type").find(":input").val("");
		$("#country_name").html('<option value="86">中国</option>');
	});
	$("#t2").click(function(){
		$("#idcard_type").hide();
		$("#idcard_type").find(":input").val("");
		$("#passport_type").show();
		$("#country_name").html('<option value="0">其他</option>');
	});
});
</script>
