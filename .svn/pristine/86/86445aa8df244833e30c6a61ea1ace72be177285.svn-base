.signin {
	width:420px;
	height:479px;
	background:url(../images/login-background.png) no-repeat;
    background-size:380px;
	margin:0 auto;
	
	position:absolute;
	top:60%;
	left:50%;
	margin-top:-239px;
	margin-left:145px;
}
.signin-head {
  position: relative;
  top: 5%;
  left: 21%;
}
.form-signin {
  position: relative;
  top:10%;
  left:-6%;
  max-width: 330px;
  margin: 0 auto;
}
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .checkbox {
  font-weight: normal;
}
.form-signin .form-control {
  position: relative;
  font-size: 16px;
  height: auto;
  padding: 10px;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[id="user_phone"] {
  border:1px solid #577577;
  margin-bottom: 14px;
  border-radius: 5px;
  background: url(../images/user_01.png) 5px 5px #a3e2e6 no-repeat;
  background-size: 20px;
  padding-left:40px;
  color:#333;
}
.form-signin input[id="user_phone"]:focus {
  background: url(../images/user_02.png) 5px 5px #fff no-repeat;
  background-size: 20px;
  color:#333;
}
.form-signin input[id="user_pwd"] {
  border:1px solid #577577;
  margin-bottom: 15px;
  border-radius: 5px;
  background: url(../images/pwd_01.png) 5px 5px #a3e2e6 no-repeat;
  background-size: 20px;
  padding-left:40px;
  padding-right:40px;
  color:#333;
}
.form-signin input[id="user_pwd"]:focus {
  background: url(../images/pwd_02.png) 5px 5px #fff no-repeat;
  background-size: 20px;
  color:#333;
}
.close-show{
  cursor: pointer;
  background: url(../images/close_pwd_01.png) no-repeat;
  background-size: 20px;
}
.show-close{
  cursor: pointer;
  background: url(../images/show_pwd_02.png) no-repeat;
  background-size: 20px;
}
.form-signin button {
  border-radius: 0;
}