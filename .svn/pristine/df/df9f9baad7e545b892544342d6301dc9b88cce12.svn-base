<script type="text/javascript">
//定义全局菜单变量
var t="";
$(function(){
	//获取地址栏后面菜单参数
	 var a = window.location.href;
	 var s=a.indexOf("?");
	 t=a.substring(s+1);

	 //用户管理初始化加载数据
     getDataList(0,null);

    //条件查询
    var initFlag2="";
    $(".btn-search").click(function(){
    	 initFlag2=true;
		getDataList(0,null);
    });

    var initFlag = true;
	//查询函数
	function getDataList(currPage, jg) {
	    var page=currPage+1;
		$.ajax({
		    url : "../../../user-platform/managergridquery.action",
		    type : "post",
		    dataType : 'json',
		    data : {pageno :currPage+1,c_menu_code:t,user_name:$("#user_name").val(),role_code:$("#role_name").val(),user_flag:$("#user_flag").val()},
		    success : function(response) {
		    //console.log(response.recordCount);
		    var page_count=response.recordCount;
		    if (initFlag) {
		    	//debugger;
	        	$("#Pagination").pagination(page_count,{

	            	/*items_per_page : rows,*/
	            	/*num_edge_entries : 1,
	            	num_display_entries : 10,*/
	        		callback : getDataList//回调函数
	        	});
	            initFlag = false;
            }
            if (initFlag2) {
		    	//debugger;
	        	$("#Pagination").pagination(page_count,{

	            	/*items_per_page : rows,*/
	            	/*num_edge_entries : 1,
	            	num_display_entries : 10,*/
	        		callback : getDataList//回调函数
	        	});
	            initFlag2 = false;
            }
	    	//调用数据展示函数
	    	//window.location.replace(window.location.href)
		    show_list(response);
		   }
		});
	}	

 //数据展示公共函数
 function show_list(response){
   var html ="";
   var html2="";
   var pn=response.pageNo;
   var num=(pn-1)*10+1;
   console.log(response.data);
    $.each(response.data, function(i,p){
    	if(p.user_flag=="有效"){
				html2=`<span id="user-staus" style="color:#da281f;cursor:pointer;" onclick="user_status($(this),${p.user_id},'${p.user_flag}')">停用</span>`;
    	}else{
 				html2=`<span id="user-staus" style="color:#da281f;cursor:pointer;" onclick="user_status($(this),${p.user_id},'${p.user_flag}')">启用</span>`;   		
    	}
        html +=`<tr class='text-c'>
               	<td>`+(num+i)+`</td>
               	<td>${p.user_phone}</td>
                <td>${p.user_name}</td>
                <td>${p.role_name}</td>
                <td>${p.user_flag}</td>
                <td>${p.update_date}</td>
                <td>${p.ceate_date}</td>
                <td class="td-manage">
				<span class="pointer btn-user-edit" onclick=user_edit(${p.user_id},t)>编辑</span>`+html2+`
				</td>
                </tr>`;
                });
        $(".user-tablelist .user-tbody").html(html);
        $(".page-count").html(response.pageCount);
    }

	/*管理员-增加*/
	$(".btn-user-add").click(function(){
		layer_show('新增用户','user-add.html?'+t,'100','100');
	});
	
});
//启用 停用
	function user_status(obj,user_id,flagg){
		//console.log(a);
		if(flagg=='有效'){
			//debugger;
			obj.html("启用");
			window.location.reload();

			$.ajax({
            	url:"../../../user-platform/userflag.action",
            	type:"post",
            	dataType:'json',
            	data:{user_id:user_id,user_flag:2000002},
            	success:function(response) {
            	}
        	});	
        }else{
        	//debugger;
        	obj.html("停用");
        	window.location.reload();
			$.ajax({
            	url:"../../../user-platform/userflag.action",
            	type:"post",
            	dataType:'json',
            	data:{user_id:user_id,user_flag:2000001},
            	success:function(response) {
            		window.location.reload();
            	}
        	});
        }
	}

	/*编辑用户*/
	function user_edit(id){
		layer_show('编辑用户','user-edit.html?'+t+'&'+id,'100','100');
	}	

</script>
</body>
