<script type="text/javascript">
	$(function() {
		//后台权限控制
		//验证是否登录
		var loginUname =window.localStorage.getItem("loginUname");
		//处理验证是否登录后的逻辑
		if(loginUname){//登录过
			$("#show-user").html(loginUname);
		}else{//没有登录
			window.location.href="login.html";
		}
		var userPhone = window.localStorage.getItem("loginUname");
		mkh.ajax({
			url: "../user-platform/getMenu.action",/*调用菜树方法*/
			type: "post",
			dataType: 'json',
			data: {user_phone: userPhone},
			success: function (menulist) {
				menu_list(menulist);
			},
			error:function(data){
				console.log(data)
			}
		});
		//加载左侧菜单树
		function menu_list(menulist) {
			var dl ="";
			var dt="";
			var menu_img = ""
			$.each(menulist.data, function(key,val){
				var dd="";
				$.each(val.menu_list, function(v,k){
					dd+="<li><a data-href='"+k.c_action_path+"?"+k.c_menu_code+ "' data-title='" +k.c_menu_name + "' href='javascript:void(0)'>"+ k.c_menu_name+"</a ></li>";
				});
				menu_img = "<img style='height:20px;width:20px;' src='../images/menu/"+val.c_menu_code+".png'/>&nbsp;";//图标
				dt="<dt>"+ menu_img + val.c_menu_name+"<i class='Hui-iconfont menu_dropdown-arrow'>&#xe6d5;</i></dt><dd><ul>"+dd+"</ur></dd>";
				dl+="<dl>"+dt+"</dl>";
			});
			$('#menulist').append(dl);
		}
		
