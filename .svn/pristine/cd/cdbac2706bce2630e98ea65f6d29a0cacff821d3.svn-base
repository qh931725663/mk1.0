<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="../lib/html5shiv.js"></script>
    <script type="text/javascript" src="../lib/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" type="text/css" href="../static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="../static/h-admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="../lib/Hui-iconfont/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="../static/h-admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="../lib/layer/skin/layer.css" />
    <!--[if IE 6]>
    <script type="text/javascript" src="../lib/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <title>新增用户 </title>
</head>
<body>
<article class="container">
    <form class="form form-horizontal" id="form-admin-add" enctype="multipart/form-data" >
        <input type="hidden" id="use_id_h" value="">
        <div class="row cl" style="display: none;">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>用&nbsp;&nbsp;户&nbsp;&nbsp;名</label>
            <div class="formControls col-xs-3 col-sm-4">
                <input type="text" class="input-text" value="" placeholder="4-14个字符，只能用字母、数字" name="">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>手&nbsp;&nbsp;机&nbsp;&nbsp;号</label>
            <div class="formControls col-xs-3 col-sm-4">
                <input type="text" class="input-text" id="user_phone" placeholder="请输入手机号" name="user_phone">
            </div>
            <span id="user_phone_mes" style="color:#d22f4c;"></span>            
        </div>        
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码</label>
            <div class="formControls col-xs-3 col-sm-4">
                <input type="password" class="input-text"  placeholder="6-16位，只能用字母、数字" id="user_pwd" name="user_pwd">
            </div>
            <span id="user_pwd_mes" style="color:#d22f4c;"></span>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>确认密码</label>
            <div class="formControls col-xs-3 col-sm-4">
                <input type="password" class="input-text"   placeholder="请输入与上面相同的密码" id="user_pwd2" name="user_pwd2">
            </div>
            <span id="user_pwd2_mes" style="color:#d22f4c;"></span>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名</label>
            <div class="formControls col-xs-3 col-sm-4">
                <input type="text" class="input-text" value="" maxlength="10" placeholder="请输入姓名" id="user_name" name="user_name">
            </div>
            <span id="user_name_mes" style="color:#d22f4c;"></span>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>角&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;色</label>
            <div class="formControls col-xs-3 col-sm-4">
                <select class="select select-box" id="role_code" name="role_code" size="1">
                </select>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-3">头&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;像</label>
            <div class="formControls col-xs-8 col-sm-9">
                <img src="../images/photo_01.png" class='bor'  id="look_img" style="width:120px;height:120px;cursor: pointer;" onclick="javascript:$('#image').click()">
                <input class="file" id="image" name="image" type="file" MULTIPLE="true" ACCEPT="image/gif,image/jpeg,image/jpg,image/png" style="display:none" value="">
					<span class="btn-upload form-group">
						<input type="file" multiple name="image1" class="input-file" id="img-1">
					</span>
                <p style="color: #b5b5b5;font-size: 14px;">头像可以不上传，有默认头像,图像大小为140*160</p>
            </div>
        </div>
        <div class="row cl">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
                <button class="btn btn-success radius btn-user-save" type="button" onclick="user_save();">保存</button>
                <button class="btn btn-danger radius" type="button" onclick="layer_close()">取消</button>
            </div>
        </div>
    </form>
</article>

<!--_footer 作为公共模版分离出去-->
<script type="text/javascript" src="../lib/jquery/jquery.min.js"></script>
<script type="text/javascript" src="../lib/layer/js/layer.js"></script>
<script type="text/javascript" src="../static/h-ui/js/H-ui.min.js"></script>
<script type="text/javascript" src="../static/h-admin/js/H-ui.admin.js"></script>
<script type="text/javascript" src="../static/h-admin/js/main.js"></script>
<script type="text/javascript" src="../static/h-admin/js/verification-check.js"></script>
<!--/_footer 作为公共模版分离出去-->

<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="../lib/jquery.validation/js/jquery.validate.js"></script>
<script type="text/javascript" src="../lib/jquery.validation/js/validate-methods.js"></script>
<script type="text/javascript">
var t="";
$(function(){
    //获取地址栏后面菜单参数
     var a = window.location.href;
     var s=a.indexOf("?");
     t=a.substring(s+1);

    //上传身份证组件
    function upload_img(up_img,show_img){
        $(up_img).change(function() {
            var file = this.files[0];
            var r = new FileReader();
            r.readAsDataURL(file);
            $(r).load(function() {
                $(show_img).attr({src:this.result,class:'no-bor'});
                console.log($("#image").val());
            })
        })
    }
    upload_img("#image","#look_img");
    
});
    //点击保存
    function user_save(){
        //调用新增登录校验
        var resulet = submit_check();
        if(resulet){
             var data = {
                c_menu_code: t,
                user_phone:$("#user_phone").val(),
                user_name: $("#user_name").val(),
                user_pwd: $("#user_pwd").val(),
                role_code: $("#role_code").val()
            };
            $.ajax({
                url: "../../../user-platform/addManager.action",
                type: "post",
                dataType: 'json',
                data: data,
                success: function (response) {
                    user_id = response.data.user_id;
                    upload_image(user_id);
                    layer.msg('成功添加!');
                    //页面8秒钟后关闭
                    setTimeout(function () {
                        parent.location.reload(); // 父页面刷新
                        parent.layer.close(index);
                    }, 1000);
                }
            });
        var index = parent.layer.getFrameIndex(window.name);
        }
    }
    //上传图片
    function upload_image(user_id){
        var data=new FormData($("#form-admin-add")[0]);
        $.ajax({
            type:"post",
            url:"../../../upload/file.action",
            headers:{user_id:user_id,report_type:'500006',user_type:"1"},
            data:data,
            dataType:"json",
            processData:false,
            contentType:false,
            success:function(data){         
                files = data;
            }
        }); 
    }
	
	//加载角色
	$(function(){
		//
		$.ajax({
             url: "../../../role/getRoleList.action",
             type: "post",
             dataType: 'json',
             data: {},
             success: function (data) {
                 if(data){
                 	var html = "<option value=''>请选择</option>";
                 	$.each(data,function(i,item){
                 		html+="<option value='"+item.order_id+"'>"+item.role_name+"</option>";
                 	});
                 	$('#role_code').empty();
                 	$('#role_code').append(html);
                 }
             }
         });
	});
</script>
<!--/请在上方写此页面业务相关的脚本-->
</body>
</html>