	/**
	 * 查询最近90天数据
	 * 
	 * @param user_id
	 * @return
	 */
	public List<Map<String, Object>> queryRecent(long user_id,String type) {
		String sql = "SELECT DATE_FORMAT(A.create_date,'%Y-%m-%d %H:%i') datetime,B."+type+" param,B."+type+"_rate param_rate"
				+ " FROM c_equipment_use A,c_lung_capacity B "
				+ " WHERE A.order_id=B.equipment_use_order_id AND A.user_id = ? AND "
				+ " DATE_SUB(NOW(),INTERVAL "+Constant.RECENT+" DAY) <A.create_date AND A.create_date<NOW() ORDER BY A.create_date DESC";
		System.out.println(sql);
		return jdbcTemplate.queryForList(sql, new Object[] { user_id });
	}
	
	
	public List<Map<String, Object>> queryByMonth(Long user_id, String year_month,int pageno, int pagesize) {
		String sql = "SELECT A.create_date datetime,B.fvc,B.fvc_rate,B.fev1,B.fev1_rate,B.pef,B.pef_rate "
				+ " FROM c_equipment_use A,c_lung_capacity B "
				+ " WHERE A.order_id=B.equipment_use_order_id AND A.user_id = ? AND "
				+ " DATE_FORMAT(A.create_date,'%Y-%m')=?  ORDER BY A.create_date DESC LIMIT ?,?";
		int start = (pageno - 1) * pagesize;
		System.out.println(sql);
		return jdbcTemplate.queryForList(sql, user_id, year_month,start,pagesize);
	}

	public List<Map<String, Object>> pageQuery(long user_id, int pageno, int pagesize) {
