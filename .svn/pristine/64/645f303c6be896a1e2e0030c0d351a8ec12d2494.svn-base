<script>
$(function(){
	//用户管理初始化加载数据
	getTemplateList(0);
	//条件查询
	var initFlag2="";
	$(".btn-search").click(function(){
		initFlag2=true;
		getTemplateList(0);
	});

	var initFlag = true;
	//查询函数
	function getTemplateList(currPage) {
		var page=currPage+1;
		//var data=$.param({pageno:page})+'&'+ $('#form-plan-template').serialize();
		var data = {pageno:page};
		$(':input').each(function(){
			if(this.name){
				data[this.name] = $(this).val();
			}
		});
		mkh.ajax({
			url : "../../../chronicManage/queryTempPage.action",
			type : "post",
			dataType : 'json',
			data :data,
			success : function(response) {
				console.log(response);
				var page_count=response.recordCount;
				if (initFlag) {
					$("#Pagination").pagination(page_count,{
						callback : getTemplateList//回调函数
					});
					initFlag = false;
				}
				if (initFlag2) {
					$("#Pagination").pagination(page_count,{
						callback : getTemplateList//回调函数
					});
					initFlag2 = false;
				}
				//调用数据展示函数
				show_list(response);
			}
		});
	}
	//数据展示公共函数
	function show_list(response){
		var html ="";
		var pn=response.pageNo;
		var num=(pn-1)*10+1;
		$.each(response.data, function(i,p){
			html +="<tr class='text-c'>"+
			"<td>"+(num+i)+"</td>"+
			"<td>"+p.plan_type+"</td>"+
			"<td>"+p.plan_title+"</td>"+
			"<td>"+p.plan_num+"</td>"+
			"<td>"+p.plan_text+"</td>"+
			"<td>"+p.add_user_id+"</td>"+
			"<td>"+p.create_date+"</td>"+
			"<td>"+
			"<span class='pointer btn-user-edit mr-15' onclick='plan_template_edit("+ p.order_id+")'>编辑</span>"+
			"<span class='pointer btn-user-edit mr-15' onclick='plan_template_dele("+ p.order_id+")' style='color: #da281f;'>刪除</span>"+
			"</td>"+
			"</tr>";
		});
		$(".plan-template-tablelist .plan-tbody").html(html);
		$(".page-count").html(response.pageCount);
	}
});

function plan_template_edit(user_id){
	layer_show('编辑计划模板','plan-template-edit.html?'+user_id,'100','100');
}
//新增计划模板
function plan_template_add(title,url,w,h){
	layer_show(title,url,w,h);
}
//新增计划模板
function plan_template_dele(order_id){
	layer.confirm('确定要删除该计划模板，删除后将无法恢复！',function(index){
		mkh.ajax({
			url : "../../../chronicManage/deletePlanTemplate.action",
			type : "post",
			dataType : 'json',
			data :{order_id:order_id},
			success : function(response) {
				if(response=="1"){
					window.location.reload();
				}
			}
		});
	});
}
</script>
