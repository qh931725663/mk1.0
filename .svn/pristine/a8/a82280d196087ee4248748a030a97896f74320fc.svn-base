<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="../lib/jquery.validation/js/jquery.validate.js"></script>
<script type="text/javascript" src="../lib/jquery.validation/js/validate-methods.js"></script>
<script type="text/javascript" src="../lib/jquery.validation/js/messages_zh.js"></script>
<script type="text/javascript">
    $(function(){
        var flag=-1;
        $(".select-administrative").click(function(){
            var obj=$(this);
            if(flag==-1){
                obj.html("取消");
                $("#index-layer-administrative").show();
                flag=1;
            }else{
                obj.html("选择");
                $("#index-layer-administrative").hide();
                flag=-1;
            }
        });
    });

    //选择医院
    var provinceList = [
        '浙江省',
        '上海市'
    ];
    var cityList = [
        ['杭州市','宁波市'],
        ['浦东区','闵行区']
    ]
    var hospList=[
        ['a医院1','a医院2','a医院3'],
        ['b医院1','b医院3','b医院3'],
        ['c医院1','c医院3','c医院3'],
        ['c医院1','c医院3','c医院3']

    ];
    var adminRoleList=[
        ['a科室1','a科室2','a科室3'],
        ['b科室1','b科室2','b科室3']
    ];
    //填充省份列表    for  for..in  forEach
    var str = '';
    $.each(provinceList, function(i,v){
        //console.log('处理数组中的一个元素');
        //console.log(i+'-'+v);
        str += `<option value="${i}">${v}</option>`;
    })
    $('#province').append(str);  //防止文档抖动

    //当用户选择某个省份时，填充对应的城市列表
    $('#province').change(function(){
        //console.log(this.value);
        $('#city').html('<option value="-1">选择市</option>');
        if(this.value==='-1'){
            return;
        }

        var cities = cityList[this.value];
        var str = '';
        $.each(cities, function(i,c){
            str += `<option value="${i}">${c}</option>`;
        })
        $('#city').append(str);
    });
    //当用户选择某个城市时，填充对应的城市列表
    $('#city').change(function(){
        //console.log(this.value);
        $('#hosp').html('<option value="-1">选择医院</option>');
        if(this.value==='-1'){
            return;
        }

        var hosp= hospList[this.value];
        var str = '';
        $.each(hosp, function(i,c){
            str += `<option value="${i}">${c}</option>`;
        })
        $('#hosp').append(str);
    });
    //当用户选择某个医院时，填充对应的科室列表
    $('#hosp').change(function(){
        //console.log(this.value);
        $('#adminRole').html('<option value="-1">选择科室</option>');
        if(this.value==='-1'){
            return;
        }
        var adminRole= adminRoleList[this.value];
        var str = '';
        $.each(adminRole, function(i,c){
            str += `<option value="${i}">${c}</option>`;
        })
        $('#adminRole').append(str);
    });

</script>
<!--/请在上方写此页面业务相关的脚本-->
</body>
</html>